---
layout: base.njk
title: Writing
---

<h1>Writings</h1>

<ul class="item-list">
{%- for post in collections.writing %}
  <li>
    <a href="{{ post.url }}">
      <span class="item-title">{{ post.data.title }}</span>
      <span class="item-meta">{{ post.data.date | date("month") }}</span>
      {%- if post.data.description %}
      <p class="item-description">{{ post.data.description }}</p>
      {%- endif %}
    </a>
  </li>
{%- endfor %}
</ul>
